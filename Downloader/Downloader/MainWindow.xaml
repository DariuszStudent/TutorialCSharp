<Window x:Class="Downloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Downloader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="SubmitButton" Content="Click to download" HorizontalAlignment="Left" Margin="80,81,0,0" VerticalAlignment="Top" Height="40" Width="238" Click="Button_Click"  FontSize="20" FontFamily="Arial"/>
        <TextBlock x:Name="DisplayText" HorizontalAlignment="Left" Margin="80,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="305" FontSize="20" RenderTransformOrigin="0.5,0.5">
        </TextBlock>
        <TextBox x:Name="WebsiteUrl" HorizontalAlignment="Left" Margin="80,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="421" Height="38" FontSize="22"/>
        <TextBox x:Name="FileName" HorizontalAlignment="Left" Margin="80,0,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Center" Width="210" Height="31" FontSize="24" FontFamily="Arial"/>

    </Grid>
</Window>
